<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/course_overview_root"
    style="@style/Activity.MainChild"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    android:baselineAligned="false"
    tools:context=".CourseOverviewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/course_overview_toolbar"
        style="@style/ActionBar" />

    <LinearLayout
        style="@style/Activity.MainChild"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/left_pane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <fragment
                android:id="@+id/course_overview_panel"
                android:name="com.dlgdev.teachers.helpbook.views.courses.fragments.CoursePanelFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/course_weekly_previous"
                android:name="com.dlgdev.teachers.helpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <fragment
            android:id="@+id/course_weekly_main_fragment"
            android:name="com.dlgdev.teachers.helpbook.views.courses.fragments.WeeklyEventsMainFragment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:layout_weight="3" />

        <LinearLayout
            android:id="@+id/right_pane"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <fragment
                android:id="@+id/course_weekly_next"
                android:name="com.dlgdev.teachers.helpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment
                android:id="@+id/course_weekly_second_next"
                android:name="com.dlgdev.teachers.helpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
