<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:baselineAligned="false"
              android:background="@android:color/darker_gray"
              tools:context=".CourseOverviewActivity">

    <LinearLayout
        android:id="@+id/left_pane"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <fragment
            android:name="com.suicune.teachershelpbook.views.courses.fragments.CoursePanelFragment"
            android:id="@+id/course_overview_panel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.suicune.teachershelpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
            android:id="@+id/course_weekly_previous"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <fragment
        android:name="com.suicune.teachershelpbook.views.courses.fragments.WeeklyEventsMainFragment"
        android:id="@+id/course_weekly_main_fragment"
        android:layout_margin="4dp"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/right_pane"
        android:orientation="vertical"
        android:layout_marginTop="4dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">

        <fragment
            android:name="com.suicune.teachershelpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
            android:id="@+id/course_weekly_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <fragment
            android:name="com.suicune.teachershelpbook.views.courses.fragments.WeeklyEventsPreviewFragment"
            android:id="@+id/course_weekly_second_next"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>
